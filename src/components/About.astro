---
import siteData from '../../content/site.json';
---

<section id="about" class="section-padding bg-black">
  <div class="container-wide">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="animate-fade-in">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          {siteData.about.title}
        </h2>
        <p class="text-gray-300 text-lg leading-relaxed mb-8">
          {siteData.about.body}
        </p>
        <div class="grid grid-cols-2 gap-6">
          {siteData.amenities.slice(0, 4).map((amenity) => (
            <div class="flex items-center space-x-3">
              <span class="text-2xl">{amenity.icon}</span>
              <span class="text-white font-medium">{amenity.label}</span>
            </div>
          ))}
        </div>
      </div>
      
      <div class="animate-slide-up">
        <img 
          src="https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?w=600&h=400&fit=crop&crop=center&auto=format&q=80"
          alt="Mafia-themed restaurant interior with dark ambiance"
          class="w-full h-96 object-cover rounded-lg shadow-2xl"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>