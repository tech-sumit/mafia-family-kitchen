---
import siteData from '../../content/site.json';
---

<section id="contact" class="section-padding bg-black">
  <div class="container-wide">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16 animate-fade-in">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Contact Us
        </h2>
        <p class="text-gray-300 text-xl">
          Get in touch with us for reservations, events, or any questions
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Contact Information -->
        <div class="lg:col-span-1 animate-slide-up">
          <div class="space-y-8">
            <div class="flex items-start space-x-4">
              <svg class="w-8 h-8 text-red-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div>
                <h3 class="text-xl font-bold text-white mb-2">Address</h3>
                <p class="text-gray-300 leading-relaxed">
                  {siteData.address}
                </p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <svg class="w-8 h-8 text-red-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <div>
                <h3 class="text-xl font-bold text-white mb-2">Email</h3>
                <a href={`mailto:${siteData.email}`} class="text-red-400 hover:text-red-300 transition-colors">
                  {siteData.email}
                </a>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <svg class="w-8 h-8 text-red-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h3 class="text-xl font-bold text-white mb-2">Opening Hours</h3>
                <div class="space-y-1">
                  <p class="text-gray-300">Mon - Thu: {siteData.hours.monday}</p>
                  <p class="text-gray-300">Fri - Sat: {siteData.hours.friday}</p>
                  <p class="text-gray-300">Sunday: {siteData.hours.sunday}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div class="lg:col-span-2 animate-slide-up" style="animation-delay: 0.2s">
          <form class="bg-gray-900/50 p-8 rounded-lg border border-gray-800">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div>
                <label for="contact-name" class="block text-white font-medium mb-2">Name</label>
                <input 
                  type="text" 
                  id="contact-name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-md text-white focus:border-red-500 focus:outline-none"
                />
              </div>
              <div>
                <label for="contact-email" class="block text-white font-medium mb-2">Email</label>
                <input 
                  type="email" 
                  id="contact-email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-md text-white focus:border-red-500 focus:outline-none"
                />
              </div>
            </div>
            
            <div class="mb-6">
              <label for="contact-subject" class="block text-white font-medium mb-2">Subject</label>
              <input 
                type="text" 
                id="contact-subject" 
                name="subject" 
                required
                class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-md text-white focus:border-red-500 focus:outline-none"
              />
            </div>
            
            <div class="mb-6">
              <label for="contact-message" class="block text-white font-medium mb-2">Message</label>
              <textarea 
                id="contact-message" 
                name="message" 
                rows="6" 
                required
                class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-md text-white focus:border-red-500 focus:outline-none resize-none"
                placeholder="Tell us about your inquiry, event details, or any questions you have..."
              ></textarea>
            </div>
            
            <button type="submit" class="w-full btn-primary text-lg py-4">
              Send Message
            </button>
          </form>
        </div>
      </div>
      
      <!-- Map Section -->
      <div class="mt-16 animate-fade-in">
        <div class="bg-gray-900/50 p-8 rounded-lg border border-gray-800">
          <h3 class="text-2xl font-bold text-white mb-6 text-center">Find Us</h3>
          <div class="aspect-video bg-gray-800 rounded-lg flex items-center justify-center">
            <div class="text-center">
              <svg class="w-16 h-16 text-gray-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <p class="text-gray-400 mb-4">Interactive map will be integrated here</p>
              <a href={siteData.google_maps_url} target="_blank" rel="noopener noreferrer" class="btn-secondary">
                Open in Google Maps
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>