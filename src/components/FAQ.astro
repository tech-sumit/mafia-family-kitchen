---
import siteData from '../../content/site.json';
---

<section class="section-padding bg-gray-900">
  <div class="container-wide">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-16 animate-fade-in">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Frequently Asked Questions
        </h2>
        <p class="text-gray-300 text-xl">
          Everything you need to know about dining at The Mafia Family Kitchen & Bar
        </p>
      </div>
      
      <div class="space-y-6">
        {siteData.faq.map((item, index) => (
          <div class="bg-black/50 border border-gray-800 rounded-lg animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
            <button 
              type="button"
              class="w-full px-8 py-6 text-left flex justify-between items-center hover:bg-gray-800/50 transition-colors rounded-lg"
              onclick={`document.getElementById('faq-${index}').classList.toggle('hidden')`}
            >
              <h3 class="text-lg font-semibold text-white pr-4">
                {item.question}
              </h3>
              <svg class="w-5 h-5 text-red-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div id={`faq-${index}`} class="hidden px-8 pb-6">
              <p class="text-gray-300 leading-relaxed">
                {item.answer}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>