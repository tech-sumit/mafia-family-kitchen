---
import siteData from '../../content/site.json';
---

<section class="section-padding bg-gray-900">
  <div class="container-wide">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {siteData.features.map((feature, index) => (
        <div class="text-center group animate-fade-in" style={`animation-delay: ${index * 0.2}s`}>
          <div class="text-6xl mb-6 group-hover:scale-110 transition-transform duration-300">
            {feature.icon}
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">
            {feature.title}
          </h3>
          <p class="text-gray-300 text-lg leading-relaxed">
            {feature.subtitle}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>