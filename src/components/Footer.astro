---
import siteData from '../../content/site.json';
---

<footer class="bg-gray-900 border-t border-gray-800">
  <div class="container-wide">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 py-12">
      <!-- Business Info -->
      <div class="lg:col-span-2">
        <h3 class="text-2xl font-bold text-white mb-4">
          {siteData.business_name}
        </h3>
        <p class="text-gray-300 mb-6 leading-relaxed">
          Experience Pune's most exclusive rooftop dining with panoramic city views, 
          mafia-themed ambiance, and exceptional multi-cuisine dining.
        </p>
        <div class="flex space-x-4">
          <a 
            href={siteData.social.instagram} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="w-10 h-10 bg-gray-800 hover:bg-red-600 rounded-full flex items-center justify-center transition-colors"
            aria-label="Follow us on Instagram"
          >
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.621 5.367 11.988 11.988 11.988s11.987-5.367 11.987-11.988C24.004 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.73-3.016-1.789C4.89 14.47 4.646 13.62 4.646 12.74c0-1.799.732-3.419 1.914-4.601C7.742 6.957 9.362 6.225 11.161 6.225c.88 0 1.730.244 2.459.687 1.058.644 1.789 1.795 1.789 3.092 0 1.297-.731 2.448-1.789 3.092-.729.443-1.579.687-2.459.687-.88 0-1.73-.244-2.459-.687-1.058-.644-1.789-1.795-1.789-3.092 0-1.297.731-2.448 1.789-3.092.729-.443 1.579-.687 2.459-.687z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {siteData.nav_items.map((item) => (
            <li>
              <a 
                href={`#${item.toLowerCase().replace(' ', '-')}`}
                class="text-gray-300 hover:text-white transition-colors"
              >
                {item}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">Contact</h4>
        <div class="space-y-3">
          <div class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-red-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            </svg>
            <p class="text-gray-300 text-sm leading-relaxed">
              10th Floor, Vedriti Building<br>
              Wadgaon Sheri, Pune
            </p>
          </div>
          
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${siteData.email}`} class="text-gray-300 hover:text-white transition-colors text-sm">
              {siteData.email}
            </a>
          </div>
          
          <div class="mt-4">
            <p class="text-white font-medium text-sm mb-2">Hours</p>
            <p class="text-gray-300 text-sm">Daily: 12:00 PM - 1:00 AM</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm mb-4 md:mb-0">
          Â© 2024 {siteData.business_name}. All rights reserved.
        </p>
        <div class="flex space-x-6 text-sm">
          <a href="#" class="text-gray-400 hover:text-white transition-colors">Privacy Policy</a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>