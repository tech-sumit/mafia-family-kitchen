---

<section id="gallery" class="section-padding bg-black">
  <div class="container-wide">
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Gallery
      </h2>
      <p class="text-gray-300 text-xl max-w-3xl mx-auto">
        Step into our world of exceptional dining and breathtaking views
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {galleryImages.map((image, index) => (
        <div class="group overflow-hidden rounded-lg animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
          <img 
            src={image.src}
            alt={image.alt}
            class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section>