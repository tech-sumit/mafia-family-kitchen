---
import siteData from '../../content/site.json';
---

<section id="menu" class="section-padding bg-black">
  <div class="container-wide">
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Our Menu
      </h2>
      <p class="text-gray-300 text-xl max-w-3xl mx-auto">
        Discover our carefully curated selection of Italian, Continental, and Indian cuisine
      </p>
    </div>
    
    <div class="space-y-16">
      {siteData.menu_categories.filter(category => !category.name.includes('Cocktails') && !category.name.includes('Mocktails')).map((category, categoryIndex) => (
        <div class="animate-slide-up" style={`animation-delay: ${categoryIndex * 0.2}s`}>
          <h3 class="text-3xl font-bold text-white mb-8 text-center border-b border-gray-800 pb-4">
            {category.name}
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {category.items.map((item) => (
              <div class="bg-gray-900/50 p-6 rounded-lg border border-gray-800 hover:border-red-600 transition-colors">
                <div class="flex justify-between items-start mb-3">
                  <h4 class="text-xl font-semibold text-white">{item.name}</h4>
                  <span class="text-red-400 font-bold text-xl ml-4">{item.price}</span>
                </div>
                <p class="text-gray-300 leading-relaxed">{item.description}</p>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>