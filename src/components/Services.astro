---
import siteData from '../../content/site.json';
---

<section class="section-padding bg-gray-900">
  <div class="container-wide">
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Our Services
      </h2>
      <p class="text-gray-300 text-xl max-w-3xl mx-auto">
        Experience exceptional dining with our comprehensive range of services
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {siteData.services.map((service, index) => (
        <div class="bg-black/50 p-8 rounded-lg border border-gray-800 hover:border-red-600 transition-all duration-300 animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
          <div class="text-4xl mb-4">{service.icon}</div>
          <h3 class="text-xl font-bold text-white mb-4">{service.title}</h3>
          <p class="text-gray-300 leading-relaxed">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>