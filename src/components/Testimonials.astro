---
import siteData from '../../content/site.json';
---

<section class="section-padding bg-black">
  <div class="container-wide">
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        What Our Guests Say
      </h2>
      <p class="text-gray-300 text-xl max-w-3xl mx-auto">
        Experience the exceptional through the eyes of our satisfied guests
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
      {siteData.testimonials.map((testimonial, index) => (
        <div class="bg-gray-900/50 p-8 rounded-lg border border-gray-800 hover:border-red-600 transition-all duration-300 animate-slide-up" style={`animation-delay: ${index * 0.2}s`}>
          <div class="flex mb-4">
            {Array.from({length: testimonial.rating}).map(() => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
          </div>
          <p class="text-gray-300 text-lg leading-relaxed mb-6">
            "{testimonial.text}"
          </p>
          <div class="flex items-center">
            <div class="w-12 h-12 bg-red-600 rounded-full flex items-center justify-center mr-4">
              <span class="text-white font-bold text-lg">
                {testimonial.name.charAt(0)}
              </span>
            </div>
            <div>
              <p class="text-white font-semibold">{testimonial.name}</p>
              <p class="text-gray-400 text-sm">Verified Guest</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>